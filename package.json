{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "server.js",
  "author": "Jason Jian",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/han0110/boilerplate"
  },
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development webpack-dev-server --config webpack.config.dev.js --progress --colors",
    "build": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "start": "node server.js",
    "lint:js": "eslint --cache --format=node_modules/eslint-formatter-pretty . && flow .",
    "lint:css": "stylelint src/*.scss src/components/*.scss --syntax scss",
    "flow-typed": "rimraf flow-typed/npm && flow-typed install --overwrite || true",
    "clean": "rimraf dist && rimraf flow-typed"
  },
  "dependencies": {
    "history": "^4.7.2",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.0",
