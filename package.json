    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "flow-bin": "^0.63.1",
    "flow-typed": "^2.2.3",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "postcss-loader": "^2.1.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.2.0",
    "stylelint-scss": "^2.4.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
