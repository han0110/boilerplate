{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "server.js",
  "author": "Jason Jian",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/han0110/boilerplate"
  },
  "license": "MIT",
  "scripts": {
    "build": "webpack --config webpack.config.prod.js",
    "dev": "webpack-dev-server --config webpack.config.dev.js --progress --colors",
    "start": "node server.js",
    "flow": "flow",
    "flow-typed": "rimraf flow-typed/npm && flow-typed install --overwrite || true",
    "lint": "eslint --cache --format=node_modules/eslint-formatter-pretty .",
    "lint-styles": "stylelint src/*.scss src/components/*.scss --syntax scss",
    "lint-styles-fix": "stylefmt -r src/*.scss src/components/*.scss",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "history": "^4.7.2",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.0",
    "koa-static": "^3.0.0",
    "react": "^15.6.0",
    "react-dom": "^15.6.0",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-flowtype-errors": "^3.3.6",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "2.1.2",
    "file-loader": "^1.1.5",
    "flow-bin": "^0.63.1",
    "flow-typed": "^2.2.3",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "url-loader": "^0.6.2",
    "webpack": "^2.7.0",
    "webpack-dev-server": "^2.9.7"
  }
